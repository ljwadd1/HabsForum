@model HabsForum.Models.Discussion

@{
    ViewData["Title"] = "Delete";
    string imageUrl = Url.Content("/photos/" + Model.ImageFilename);
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Discussion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageFile)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageFilename)
            <div class="mb-3">
                <label asp-for="ImageFile" class="control-label">
                    <img src="@imageUrl" class="image-detail-thumbnail" alt="No Image" />
                </label>
            </div>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DiscussionId" />
        <input type="submit" value="Delete" class="btn btn-danger mb-3" />
        <br />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
