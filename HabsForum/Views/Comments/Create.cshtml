@model HabsForum.Models.Comment

@{
    ViewData["Title"] = "Add Comment";
}

<h1>Create</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.DiscussionId" name="DiscussionId" />

            <div class="mb-3">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="mb-3" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="GetDiscussion" asp-route-id="@ViewBag.DiscussionId">Back to Discussion</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
